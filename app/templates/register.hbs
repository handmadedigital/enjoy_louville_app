<div id="registerWrapper">
	<div class="row">
		<div class="col-md-8 col-md-offset-2" style="padding-top: 15px; padding-bottom: 15px;">
			<div id="registerFormWrapper">
				<form {{action 'register' on="submit"}}>
					<div class="form-control-wrapper">
						{{input type="text" value=username class="form-control empty" autocomplete="off"}}
						<div class="floating-label">Username</div>
						<span class="material-input"></span>
					</div>
					<div class="form-control-wrapper">
						{{input type="email" value=email class="form-control empty" autocomplete="off"}}
						<div class="floating-label">Email</div>
						<span class="material-input"></span>
					</div>
					<div class="form-control-wrapper">
						{{input type="text" value=firstName class="form-control empty" autocomplete="off"}}
						<div class="floating-label">First Name</div>
						<span class="material-input"></span>
					</div>
					<div class="form-control-wrapper">
						{{input type="text" value=lastName class="form-control empty" autocomplete="off"}}
						<div class="floating-label">Last Name</div>
						<span class="material-input"></span>
					</div>
					<div class="form-control-wrapper">
						{{input type="password" value=password class="form-control empty" autocomplete="off"}}
						<div class="floating-label">Password</div>
						<span class="material-input"></span>
					</div>
					<button class="btn btn-primary">Register!</button>
				</form>
			</div>
		</div>
	</div>
</div>
